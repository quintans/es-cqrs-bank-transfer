[
    {
        "create": "events"
    },
    {
        "createIndexes": "events",
        "indexes": [
            {
                "key": {
                    "aggregate_id": 1,
                    "aggregate_version": 1
                },
                "name": "unique_aggregate_version",
                "unique": true,
                "background": true
            },
            {
                "key": {
                    "aggregate_id": 1,
                    "idempotency_key": 1
                },
                "name": "idx_idempotency_aggregate",
                "unique": true,
                "partialFilterExpression": { "idempotency_key": { "$gt": "" } },
                "background": true
            }
        ]
    },
    {
        "create": "snapshots"
    },
    {
        "createIndexes": "snapshots",
        "indexes": [
            {
                "key": {
                    "aggregate_id": 1
                },
                "name": "idx_aggregate",
                "background": true
            }
        ]
    }
]